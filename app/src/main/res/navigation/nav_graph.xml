<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onBoardTest">
    <fragment
        android:id="@+id/onBoardTest"
        android:name="com.example.moviedb.ui.screens.OnBoardFragment"
        tools:layout="@layout/fragment_on_board">
        <action
            android:id="@+id/action_onBoardTest_to_homeTest"
            app:destination="@id/homeTest" />
    </fragment>
    <fragment
        android:id="@+id/homeTest"
        android:name="com.example.moviedb.ui.screens.HomeFragment"
        android:label="HomeTest"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeTest_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.moviedb.ui.screens.movie_details.MovieDetailFragment"
        android:label="MovieDetailFragment"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="movieId"
            app:argType="integer" />
        <action
            android:id="@+id/action_movieDetailFragment_self"
            app:destination="@id/movieDetailFragment" />
    </fragment>

</navigation>