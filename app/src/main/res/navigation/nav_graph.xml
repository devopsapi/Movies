<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">
    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.moviedb.screens.MovieListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/action_movieListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.moviedb.screens.MovieDetailFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="movieId"
            app:argType="integer" />
        <action
            android:id="@+id/action_movieDetailFragment_to_similarMovieListFragment"
            app:destination="@id/similarMovieListFragment" />
    </fragment>
    <fragment
        android:id="@+id/similarMovieListFragment"
        android:name="com.example.moviedb.screens.SimilarMovieListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_movie_list">
        <argument
            android:name="movieId"
            app:argType="integer" />
        <action
            android:id="@+id/action_similarMovieListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
</navigation>